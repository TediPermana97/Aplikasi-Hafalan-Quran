<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_highest_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:background="@drawable/skor123"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ngajicoding.tedipermana.DataQuiz.Score.HighestScoreActivity">

    <TextView
        android:text="Halaman Score"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="316dp"
        android:layout_height="357dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textScore"
            android:layout_width="305dp"
            android:layout_height="70dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/w_oranye"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Score Anda :"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#060606"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textHighScore"
            android:layout_width="305dp"
            android:layout_height="70dp"
            android:textSize="25dp"
            android:background="@drawable/w_oranye"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Score Tertinggi :"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#060606" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="63dp"
        android:layout_marginTop="400dp"
        android:gravity="center">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="onClick"
            android:text="Coba Lagi" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="onClick1"
            android:text="Setoran Hafalan" />

    </LinearLayout>

</RelativeLayout>
