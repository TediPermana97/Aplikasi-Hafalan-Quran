<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setoran.Hafalan.HafalanActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:layout_marginLeft="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/begraund_menu_utama"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_marginTop="210dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:onClick="onClickSabaq"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/begraunda1"
                android:clickable="true"
                android:onClick="onClickSabaq"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sabaq_3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_marginStart="11dp"
                    android:gravity="center"
                    android:text="Setoran Sabaq"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/begraunda1"
                android:clickable="true"
                android:onClick="onClickSabqi"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sabqi_4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_marginStart="11dp"
                    android:text="Setoran Sabqi"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/begraunda1"
                android:clickable="true"
                android:onClick="onClickManzil"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/manzil_5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_marginStart="11dp"
                    android:gravity="center"
                    android:text="Setoran Manzil"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

