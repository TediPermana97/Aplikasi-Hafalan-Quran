<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Musyawarah.ObrolanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/dj"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="154dp"
        android:layout_marginTop="230dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="154dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:onClick="onClickAlarm"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="291dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/begraunda1"
                android:clickable="true"
                android:onClick="onClickAlarm"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/musyawarah" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Musyawarah"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="288dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/begraunda1"
                android:clickable="true"
                android:onClick="onClickJdwlsolat"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kontak2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Kontak"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>